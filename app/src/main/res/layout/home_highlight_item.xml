<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:contentPadding="10dp"
        app:cardElevation="10dp"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_highlight_item_layout"
            android:background="@drawable/card_background"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/home_highlight_item_thumbnail"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/home_highlight_item_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:text="@string/home_highlight_item_match"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

        <TextView
                android:id="@+id/home_highlight_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="Real Madrid - Barcelona"
                app:layout_constraintTop_toBottomOf="@id/home_highlight_item_title_text"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

        <TextView
                android:id="@+id/home_highlight_item_competition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/home_highlight_item_competition"
                app:layout_constraintTop_toBottomOf="@id/home_highlight_item_title"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

        <TextView
                android:id="@+id/home_highlight_item_competition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="La Liga"
                app:layout_constraintTop_toBottomOf="@id/home_highlight_item_competition_text"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

        <TextView
                android:id="@+id/home_highlight_item_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/home_highlight_item_date"
                app:layout_constraintTop_toBottomOf="@id/home_highlight_item_competition"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

        <TextView
                android:id="@+id/home_highlight_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="12/12/2019"
                app:layout_constraintTop_toBottomOf="@id/home_highlight_item_date_text"
                app:layout_constraintStart_toEndOf="@+id/home_highlight_item_thumbnail"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
